@model Rocosa_Udemy.Models.Categoria

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <h2 class="text-danger pl-3">Eliminar categoría</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoría</label>
                    <input asp-for="NombreCategoria" class="form-control" disabled />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="MostrarOrden" class="form-label">Orden</label>
                    <input asp-for="MostrarOrden" class="form-control" disabled />
                </div>
            </div>
        </div>
        <br />
        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">Regresar</a>
        </div>



    </div>

</form>

