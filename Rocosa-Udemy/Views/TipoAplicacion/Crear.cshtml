@model Rocosa_Udemy.Models.TipoAplicacion

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Crear">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Nueva aplicacion</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label">Nombre aplicación</label>
                    <input asp-for="Nombre" class="form-control" />
                </div>
            </div>
        </div>
        <br />
        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary">Crear Nueva</button>
            <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">Regresar</a>
        </div>



    </div>

</form>

