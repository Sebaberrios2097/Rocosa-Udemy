@model Rocosa_Udemy.Models.TipoAplicacion

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Editar">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <h2 class="text-info pl-3">Editar tipo aplicacion</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label">Nombre aplicación</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary">Editar</button>
            <a asp-controller="TipoAplicacion" asp-action="Index" class="btn btn-success">Regresar</a>
        </div>



    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

